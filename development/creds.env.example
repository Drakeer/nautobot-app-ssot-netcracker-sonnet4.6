# ============================================================
# nautobot-app-ssot-netcracker — Development Credentials
#
# Copy this file to creds.env and fill in real values.
# NEVER commit creds.env to version control.
# ============================================================

# --- Nautobot settings ---
NAUTOBOT_SECRET_KEY=change-me-to-a-long-random-string
NAUTOBOT_ALLOWED_HOSTS=*
NAUTOBOT_DB_HOST=nautobot-db
NAUTOBOT_DB_PORT=5432
NAUTOBOT_DB_NAME=nautobot
NAUTOBOT_DB_USER=nautobot
NAUTOBOT_DB_PASSWORD=nautobot

# Superuser created on first boot
NAUTOBOT_SUPERUSER_NAME=admin
NAUTOBOT_SUPERUSER_EMAIL=admin@example.com
NAUTOBOT_SUPERUSER_PASSWORD=admin
NAUTOBOT_SUPERUSER_API_TOKEN=0123456789abcdef0123456789abcdef01234567

# Redis
NAUTOBOT_REDIS_HOST=redis
NAUTOBOT_REDIS_PORT=6379

# Installed apps — ensure both ssot and this integration are listed
NAUTOBOT_INSTALLED_APPS=nautobot_ssot,nautobot_ssot_netcracker

# --- Stub NetCracker PostgreSQL (dev/test only) ---
# In production, configure these in the Nautobot UI via NetCrackerConfig.
NC_DB_HOST=netcracker-db
NC_DB_PORT=5432
NC_DB_NAME=netcracker
NC_DB_USER=nc_readonly
NC_DB_PASSWORD=changeme
